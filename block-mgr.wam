 (func $init-blockset-manager (debug (export "init-blockset-manager"))
   ;; Bootstrap blockset 0, which manages the blocks which contain the heaps of
   ;; all blocksets (including blockset 0).

   (local $blockset i32)
   (local $free-block i32)
   (local $free-block-addr i32)
   (local $free-block-size i32)
   (local $free-entry i32)
   (local $free-ref i32)
   (local $heap-block i32)
   (local $heap-block-addr i32)
   (local $heap-block-size i32)
   (local $heap-ref i32)

   (table.set $memory-copy (global.get $block-mgr-blockset-id) (ref.func $memory-copy))
   (table.set $memory-grow (global.get $block-mgr-blockset-id) (ref.func $memory-grow))
   (table.set $memory-size (global.get $block-mgr-blockset-id) (ref.func $memory-size))

   (local.set $blockset (expand %get-blockset (global.get $block-mgr-blockset-id)))

   (local.set $heap-block-addr (i32.shl (global.get $max-blockset-id)
                                        (global.get $blockset-size-bits)))

   (local.set $heap-block-size (i32.mul (global.get $max-blockset-id)
                                        (global.get $per-blockset-heap0-capacity-bytes)))

   (local.set $free-block-addr (i32.add (local.get $heap-block-addr)
                                        (local.get $heap-block-size)))

   (local.set $free-block-size (i32.sub (global.get $page-size)
                                        (local.get $free-block-addr)))

   (local.set $free-block (expand %make-block
                                  (local.get $free-block-addr)
                                  (local.get $free-block-size)))

   (local.set $free-ref (expand %make-block-ref (local.get $free-block) (global.get $null)))

   (local.set $free-entry (expand %make-free-entry (local.get $free-ref) (global.get $null)))

   (local.set $heap-block (expand %make-block
                                  (local.get $heap-block-addr)
                                  (local.get $heap-block-size)))

   (local.set $heap-ref (expand %make-block-ref (local.get $heap-block) (local.get $free-ref)))

   (expand %set-blockset-block-list (local.get $blockset) (local.get $heap-ref))
   (call $incr-blockset-block-count (local.get $blockset))

   (expand %set-blockset-block-count      (local.get $blockset) (i32.const 2))
   (expand %set-blockset-block-list       (local.get $blockset) (local.get $heap-ref))
   (expand %set-blockset-defrag-cursor    (local.get $blockset) (global.get $null))
   (expand %set-blockset-end-block-ref    (local.get $blockset) (local.get $free-ref))
   (expand %set-blockset-heap-ref         (local.get $blockset) (local.get $heap-ref))
   (expand %set-blockset-heap-size        (local.get $blockset) (i32.const 1))
   (expand %set-blockset-free-list        (local.get $blockset) (local.get $free-entry))
   (expand %set-blockset-free-list-length (local.get $blockset) (i32.const 1))
   (expand %set-blockset-free-space       (local.get $blockset) (local.get $free-block-size))

   (expand %set-blockset-immobile-block-size (local.get $blockset) (global.get $page-size))
   (expand %set-blockset-relocation-size-limit (local.get $blockset) (global.get $page-size))

