 (func $dealloc-block (export "dealloc-block")
   (param $blockset-id i32)
   (param $block-ref i32)

   (local $blockset i32)
   (local $free-list-length i32)
   (local $heap-size i32)

   (local.set $blockset (expand %get-blockset (local.get $blockset-id)))

   (call $add-free-block (local.get $blockset) (local.get $block-ref))

   (local.set $free-list-length (expand %get-blockset-free-list-length (local.get $blockset)))
   (local.set $heap-size (expand %get-blockset-heap-size (local.get $blockset)))

   (if (i32.gt_u (i32.mul (local.get $free-list-length)
