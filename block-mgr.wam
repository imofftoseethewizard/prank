 ;; Resize Block
 ;;

 (func $resize-block (export "resize-block")
   (param $blockset i32)
   (param $block-ref i32)
   (param $new-size i32)
   (result i32)

   (local $free-addr i32)
   (local $free-block i32)
   (local $free-block-ref i32)
   (local $free-size i32)
   (local $new-block-ref i32)
   (local $next-block-ref i32)
   (local $old-size i32)
   (local $resized-block-ref i32)

   (local.set $old-size (expand %get-block-ref-size (local.get $block-ref)))

   (if (i32.gt_u (local.get $new-size) (local.get $old-size))
       (then
        (local.set $new-block-ref (call $alloc-block (local.get $blockset) (local.get $new-size)))

        (call_indirect $memory-copy
                       (type $memory-copy-sig)
                       (expand %get-block-ref-addr (local.get $new-block-ref))
                       (expand %get-block-ref-addr (local.get $block-ref))
                       (local.get $old-size)
                       (expand %get-blockset-id (local.get $blockset)))

        (call $add-free-block (local.get $blockset) (local.get $block-ref))
        (local.set $resized-block-ref (local.get $new-block-ref)))

     (else
      (local.set $resized-block-ref (local.get $block-ref))

      (if (i32.gt_u (local.get $old-size) (local.get $new-size))
          (then
           (local.set $next-block-ref (expand %get-next-block-ref (local.get $block-ref)))

           (local.set $free-addr (i32.add (expand %get-block-ref-addr (local.get $block-ref))
                                          (local.get $new-size)))
           (local.set $free-size (i32.sub (local.get $old-size) (local.get $new-size)))
           (local.set $free-block (expand %make-block
                                          (local.get $free-addr) (local.get $free-size)))
           (local.set $free-block-ref (expand %make-block-ref
                                              (local.get $free-block)
                                              (local.get $next-block-ref)))

           (expand %set-next-block-ref (local.get $block-ref) (local.get $free-block-ref))
           (expand %set-block-ref-size (local.get $block-ref) (local.get $new-size))
           (call $add-free-block (local.get $blockset) (local.get $free-block-ref))

           (if (i32.eq (local.get $next-block-ref) (global.get $null))
               (then
                (expand %set-blockset-end-block-ref
                        (local.get $blockset) (local.get $free-block-ref))))))))

   (local.get $resized-block-ref))


