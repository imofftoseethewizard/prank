 (func $decr-blockset-fragment-count (debug (export "decr-blockset-fragment-count"))
   (param $blockset i32)
   (param $size i32)
   (local $addr i32)

   (%set! $addr (i32.add (%get $blockset) (global.get $blockset-fragment-count)))
   (i32.store (%get $addr) (i32.sub (i32.load (%get $addr)) (i32.const 1)))

   (%set! $addr (i32.add (%get-blockset-fragment-counts-base (%get $blockset))
                         (i32.shl (%get $size)
                                  (global.get $value-size-bits))))

   (i32.store (%get $addr) (i32.sub (i32.load (%get $addr)) (i32.const 1))))

 (func $incr-blockset-fragment-count (debug (export "incr-blockset-fragment-count"))
   (param $blockset i32)
   (param $size i32)
   (local $addr i32)
   (%set! $addr (i32.add (%get $blockset) (global.get $blockset-fragment-count)))
   (i32.store (%get $addr) (i32.add (i32.load (%get $addr)) (i32.const 1)))

   (%set! $addr (i32.add (%get-blockset-fragment-counts-base (%get $blockset))
                         (i32.shl (%get $size)
                                  (global.get $value-size-bits))))

   (i32.store (%get $addr) (i32.add (i32.load (%get $addr)) (i32.const 1))))

 (debug
  (func $decr-blockset-block-count (debug (export "decr-blockset-block-count"))
    (param $blockset i32)
    (local $addr i32)
    (%set! $addr (i32.add (%get $blockset) (global.get $blockset-block-count)))
    (i32.store (%get $addr) (i32.sub (i32.load (%get $addr)) (i32.const 1))))

  (func $decr-blockset-free-count (debug (export "decr-blockset-free-count"))
    (param $blockset i32)
    (local $addr i32)
    (%set! $addr (i32.add (%get $blockset) (global.get $blockset-free-count)))
    (i32.store (%get $addr) (i32.sub (i32.load (%get $addr)) (i32.const 1))))

  (func $decr-blockset-unused-count (debug (export "decr-blockset-unused-count"))
    (param $blockset i32)
    (local $addr i32)
    (%set! $addr (i32.add (%get $blockset) (global.get $blockset-unused-count)))
    (i32.store (%get $addr) (i32.sub (i32.load (%get $addr)) (i32.const 1))))

  (func $incr-blockset-block-count (debug (export "incr-blockset-block-count"))
    (param $blockset i32)
    (local $addr i32)
    (%set! $addr (i32.add (%get $blockset) (global.get $blockset-block-count)))
    (i32.store (%get $addr) (i32.add (i32.load (%get $addr)) (i32.const 1))))

  (func $incr-blockset-free-count (debug (export "incr-blockset-free-count"))
    (param $blockset i32)
    (local $addr i32)
    (%set! $addr (i32.add (%get $blockset) (global.get $blockset-free-count)))
    (i32.store (%get $addr) (i32.add (i32.load (%get $addr)) (i32.const 1))))

  (func $incr-blockset-unused-count (debug (export "incr-blockset-unused-count"))
    (param $blockset i32)
    (local $addr i32)
    (%set! $addr (i32.add (%get $blockset) (global.get $blockset-unused-count)))
    (i32.store (%get $addr) (i32.add (i32.load (%get $addr)) (i32.const 1)))))

