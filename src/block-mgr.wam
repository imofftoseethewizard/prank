 (global $blockset-fragment-counts-base  (debug (export "blockset-fragment-counts-base"))  i32 (i32.const 0x0c))
 (global $blockset-fragment-counts-top   (debug (export "blockset-fragment-counts-top"))   i32 (i32.const 0x10))
