 ;; Allocation
 ;;

 ;; This is used in test/test_block_mgr.py::test_stochastic.  The average of
 ;; many calls to this stub should account for the overhead of calling
 ;; alloc-block so that the performance of alloc-block's internals can be more
 ;; precisely measured.

 (func $stub-alloc-block (export "stub-alloc-block")
   (param $blockset i32)
   (param $size i32)
   (result i32)
   (%null))

 (macro %select-blockset-free-list
   (expr ,blockset)
   (expr ,size)
   (i32.add (%get-blockset-free-lists-base ,blockset)
            (call $calc-free-list-offset ,size)))

 (debug
  (func $select-blockset-free-list (export "select-blockset-free-list")
    (param $blockset i32)
    (param $size i32)
    (result i32)
    (%select-blockset-free-list (%get $blockset) (%get $size)))

  (func $get-free-list-head (export "get-free-list-head")
    (param $free-list i32)
    (result i32)
    (i32.load (%get $free-list))))

 (func $alloc-block (export "alloc-block")
   (param $blockset i32)
   (param $size i32)
   (result i32)

   (local $base-free-list i32)
   (local $block i32)
   (local $free-block-size i32)
   (local $free-list i32)
   (local $new-block i32)

   (debug
    (if (i32.eqz (%get $size))
        (then
         (return (%null)))))

   ;; $quantize-size is used here to round up the requested size to the next
   ;; larger free list.  This ensures that every block in the selected free list
   ;; is big enough to satisfy the allocation.

   (%set! $free-list (%select-blockset-free-list (%get $blockset)
                                                 (call $quantize-size (%get $size))))

   ;; Returns the first block in the free list, or null if the list was empty.

   (%set! $block (call $pop-free-block (%get $blockset) (%get $free-list)))

   (if (i32.eq (%get $block) (%null))
       (then

        ;; The selected free list was empty.  Search for a large block to split a
        ;; piece off of.  Most of the larger free lists, for sizes 2^24 and up are
        ;; probably going to be empty most of the time, so we start from the last
        ;; free list where a large block was retrieved from.

        (%set! $base-free-list (%get $free-list))
        (%set! $free-list (%get-blockset-last-free-list (%get $blockset)))
        ;; (%set! $free-list (i32.sub (%get-blockset-free-lists-top (%get $blockset))
        ;;                                (global.get $value-size)))

        (loop $again
          (if (i32.gt_u (%get $free-list) (%get $base-free-list))
              (then
               (%set! $block
                      (call $pop-free-block (%get $blockset) (%get $free-list)))
               (if (i32.eq (%get $block) (%null))
                   (then
                    ;; List empty, try the next lower size.
                    (%decr-n i32 $free-list #value-size)
                    (br $again))))))

        ;; A block was found, update the last free list so the next time this
        ;; code is encountered, we're likely to only run through the loop once.
        (if (i32.ne (%get $block) (%null))
            (then
             (%set-blockset-last-free-list (%get $blockset) (%get $free-list))))))

   (if (i32.eq (%get $block) (%null))
       (then
        ;; The free lists do not contain a block big enough to satisfy the
        ;; request, so create a new large free block out of one or more
        ;; additional memory pages.
        (%set! $block (call $provision-free-block (%get $blockset) (%get $size)))))

   ;; If the block is more than just a little too big, split it and put the
   ;; remainder into the appropriate free list.

   (%set! $free-block-size (%get-block-size (%get $block)))

   (if (i32.ne (%get $size) (%get $free-block-size))
       (then
        (if (i32.or (i32.lt_u (%get $size) (global.get $fragment-size))
                    (i32.ge_u (i32.sub (%get $size) (%get $free-block-size))
                              (global.get $fragment-size)))
            (then
             (call $split-free-block (%get $blockset) (%get $block) (%get $size))))))

   ;; Update the block's status.
   (call $mark-block-allocated (%get $block))

   (debug
    ;; A little bit of accounting.
    (%set-blockset-free-space (%get $blockset)
                              (i32.sub (%get-blockset-free-space (%get $blockset))
                                       (%get $size))))

   (%get $block))

 (func $quantize-size (debug (export "quantize-size"))

   ;; todo reword

   ;; One of the memory efficiency versus CPU efficiency trade-offs that can be
   ;; made is either to allocate precisely the amount requested and have a
   ;; longer free list, and therefore increased search and maintenance time, or
   ;; to allocate approximately and have a smaller free list.  This function is
   ;; part of the latter approach.  Essentially, it reduces the precision of the
   ;; requested size, so that for example, a request for 207 bytes would be
   ;; rounded up to 208 since 207 = 0xcf = 0b11001111, and below we only
   ;; use 4 bits of precision, so that gives 0b11010000 = 0xd0 = 208.  If only
   ;; 3 bits were used, then we would have rounded up to 0b11100000 = 0xe0 = 224.

   (param $size i32)
   (result i32)

   (local $mask i32)
   (local $rank i32)

   (%set! $rank (%rank i32 (%get $size)))

   (if (i32.le_u (%get $rank) (global.get $alloc-precision-bits))
       (then
        (%set! $mask (i32.const 0)))
     (else
      (%set! $mask (i32.sub (i32.shl (i32.const 1)
                                     (i32.sub (%get $rank)
                                              (global.get $alloc-precision-bits)))
                            (i32.const 1)))))

   (i32.and (i32.add (%get $size) (%get $mask))
            (i32.xor (%get $mask) (i32.const -1))))

 (func $calc-free-list-offset (debug (export "calc-free-list-offset"))
   (param $size i32)
   (result i32)

   (local $rank i32)
   (local $rank-shift i32)

   (%set! $rank (%rank i32 (%get $size)))

   (if (i32.le_u (%get $rank) (global.get $alloc-precision-bits))
       (then
        (%set! $rank-shift (i32.const 0)))
     (else
      (%set! $rank-shift (i32.sub (%get $rank)
                                  (global.get $alloc-precision-bits)))))

   (i32.shl (i32.add (i32.shr_u (%get $size)
                                (%get $rank-shift))
                     (i32.shl (%get $rank-shift)
                              (i32.sub (global.get $alloc-precision-bits)
                                       (i32.const 1))))
            (global.get $value-size-bits)))

 (func $pop-free-block (debug (export "pop-free-block"))
   (param $blockset i32)
   (param $free-list i32)
   (result i32)

   (local $block i32)
   (local $head i32)
   (local $next i32)

   (%set! $block (%null))
   (%set! $head (i32.load (%get $free-list)))

   (loop $again
     (if (i32.ne (%get $head) (%null))
         (then
          (%set! $block (call $get-pair-car (%get $head)))
          (%set! $next (call $get-pair-cdr (%get $head)))

          (call $dealloc-pair (%get $head))
          (%set! $head (%get $next))

          (if (%is-unused-block (%get $block))
              (then
               (call $dealloc-ref (%get $block))
               (%set! $block (%null))

               (call $decr-blockset-unused-count (%get $blockset))

               (br $again))))))

   (i32.store (%get $free-list) (%get $head))

   (if (i32.ne (%get $block) (%null))
       (then

        (debug
         (call $decr-blockset-free-count (%get $blockset)))

        (if (%is-fragment (%get $block))
            (then
             (call $decr-blockset-fragment-count
                   (%get $blockset)
                   (%get-block-size (%get $block)))))))

   (%get $block))

 (func $provision-free-block (debug (export "provision-free-block"))
   (param $blockset i32)
   (param $size i32)
   (result i32)

   (local $block i32)
   (local $block-addr i32)
   (local $blockset-id i32)
   (local $end-block i32)
   (local $end-page i32)
   (local $free-pages i32)
   (local $free-size i32)
   (local $page-count i32)
   (local $total-pages i32)

   (%set! $blockset-id (%get-blockset-id (%get $blockset)))

   (%set! $page-count (i32.add (i32.shr_u (i32.sub (%get $size)
                                                   (i32.const 1))
                                          (global.get $page-size-bits))
                               (i32.const 1)))

   (%set! $total-pages (call_indirect
                        $memory-size
                        (type $memory-size-sig)
                        (%get $blockset-id)))

   (%set! $end-block (%get-blockset-end-block (%get $blockset)))

   (if (i32.eq (%get $end-block) (%null))
       (then
        (%set! $free-pages (%get $total-pages))
        (%set! $block-addr (i32.const 0)))

     (else
      (%set! $end-page (i32.shr_u (%get-next-block-addr (%get $end-block))
                                  (global.get $page-size-bits)))

      (%set! $free-pages (i32.sub (%get $total-pages) (%get $end-page)))

      (%set! $block-addr (%get-next-block-addr (%get $end-block)))))

   (if (i32.lt_u (%get $free-pages) (%get $page-count))
       (then
        (drop (call_indirect $memory-grow
                             (type $memory-grow-sig)
                             (i32.sub (%get $page-count)
                                      (%get $free-pages))
                             (%get $blockset-id)))))

   (%set! $free-size (i32.shl (%get $page-count)
                              (global.get $page-size-bits)))

   (%set! $block (call $make-ref
                       (%get $block-addr)
                       (%get $free-size)))

   (call $link-refs (%get $blockset) (%get $end-block) (%get $block))
   (call $link-refs (%get $blockset) (%get $block) (%null))

   (debug
    (call $incr-blockset-block-count (%get $blockset))

    (%set-blockset-free-space (%get $blockset)
                              (i32.add (%get-blockset-free-space (%get $blockset))
                                       (%get $free-size))))

   (%set-blockset-total-size (%get $blockset)
                             (i32.add (%get-blockset-total-size (%get $blockset))
                                      (%get $free-size)))
   (%get $block))

 (func $split-free-block (debug (export "split-free-block"))
   (param $blockset i32)
   (param $block i32)
   (param $split-size i32)

   (local $free-size i32)
   (local $new-block i32)
   (local $next-block i32)
   (local $remainder-size i32)

   (%set! $free-size (%get-block-size (%get $block)))

   (%set! $remainder-size
          (i32.sub (%get $free-size) (%get $split-size)))

   (%set! $next-block (%get-next-block (%get $block)))

   (%set! $new-block (call $make-ref
                           (i32.add (%get-block-addr (%get $block))
                                    (%get $split-size))
                           (%get $remainder-size)))

   (%set-block-size (%get $block) (%get $split-size))

   (call $link-refs (%get $blockset) (%get $block) (%get $new-block))
   (call $link-refs (%get $blockset) (%get $new-block) (%get $next-block))

   (debug
    (call $incr-blockset-block-count (%get $blockset)))

   (call $add-free-block (%get $blockset) (%get $new-block)))


 ;;-----------------------------------------------------------------------------
 ;;
 ;; Resize Block
 ;;

 (func $resize-block (export "resize-block")
   (param $blockset i32)
   (param $block i32)
   (param $new-size i32)
   (result i32)

   (local $new-block i32)
   (local $old-size i32)
   (local $size i32)

   (%set! $new-block (call $alloc-block (%get $blockset) (%get $new-size)))

   (%set! $old-size (%get-block-size (%get $block)))

   (%set! $size (if (result i32) (i32.gt_u (%get $new-size) (%get $old-size))
                  (then (%get $old-size))
                  (else (%get $new-size))))

   (call_indirect $memory-copy
                  (type $memory-copy-sig)
                  (%get-block-addr (%get $new-block))
                  (%get-block-addr (%get $block))
                  (%get $size)
                  (%get $blockset))

   (call $dealloc-block (%get $blockset) (%get $block))

   (%get $new-block))

 ;;-----------------------------------------------------------------------------
 ;;
 ;; Deallocation
 ;;

 ;; This is used in test/test_block_mgr.py::test_stochastic.  The average of
 ;; many calls to this stub should account for the overhead of calling
 ;; dealloc-block so that the performance of dealloc-block's internals can be
 ;; more precisely measured.

 (func $stub-dealloc-block (export "stub-dealloc-block")
   (param $blockset i32)
   (param $block i32))

 (func $dealloc-block (export "dealloc-block")
   (param $blockset i32)
   (param $block i32)

   (local $size i32)

   (debug
    (if (i32.eq (%get $block) (%null))
        (then
         (return))))

   (%set! $size (%get-block-size (%get $block)))

   (call $add-free-block (%get $blockset) (%get $block))

   (debug
    (%set-blockset-free-space (%get $blockset)
                              (i32.add (%get-blockset-free-space (%get $blockset))
                                       (%get $size))))

   ;; If the number of fragments times the relocation size limit is greater than
   ;; the total amount of memory managed by this blockset, then each time a
   ;; fragment is relocated, it will very likely be able to be merged into a
   ;; nearby free block, thus eliminating the fragment.

   (if (i32.gt_u (i32.mul (%get-blockset-fragment-count (%get $blockset))
                          (%get-blockset-relocation-size-limit (%get $blockset)))
                 (%get-blockset-total-size (%get $blockset)))
       (then
        (call $step-defragment-blockset (%get $blockset))
        (if (i32.gt_u (%get-blockset-unused-count (%get $blockset))
                      (%get-blockset-free-count (%get $blockset)))
            (call $step-clean-free-lists (%get $blockset))))))

 (func $add-free-block (debug (export "add-free-block"))

   ;; Adds the block to the appropriate free list, based on the block's size.

   (param $blockset i32)
   (param $block i32)

   (local $free-list i32)
   (local $last-free-list i32)
   (local $size i32)

   (%set! $size (%get-block-size (%get $block)))

   (%set! $free-list (%select-blockset-free-list (%get $blockset) (%get $size)))

   (i32.store (%get $free-list)
              (call $make-pair
                    (%get $block)
                    (i32.load (%get $free-list))))

   (call $mark-block-free (%get $block))

   (debug
    (call $incr-blockset-free-count (%get $blockset)))

   (if (i32.lt_u (%get $size) (global.get $fragment-size))
       (then
        (call $incr-blockset-fragment-count (%get $blockset) (%get $size))))

   (%set! $last-free-list (%get-blockset-last-free-list (%get $blockset)))

   (if (i32.gt_u (%get $free-list) (%get $last-free-list))
       (then
        (%set-blockset-last-free-list (%get $blockset) (%get $free-list)))))

 (func $step-defragment-blockset (debug (export "step-defragment-blockset"))

   ;; Makes one step of incremental defragmentation. That consists of taking the
   ;; first item from each free list which contains a fragment, and attempting
   ;; to merge it with some block or blocks within the relocation size limit
   ;; above it.  It pops one free block from each list to distribute the
   ;; activity across block sizes, otherwise, one free list might become empty,
   ;; causing unnecessary block splits (and block splits are computationally
   ;; more expensive than reuse).

   (param $blockset i32)

   (local $average i32)
   (local $count-addr i32)
   (local $free-list i32)
   (local $half-average i32)
   (local $size i32)

   (%set! $average (i32.shr_u (%get-blockset-fragment-count (%get $blockset))
                              (global.get $fragment-size-bits)))

   (%set! $count-addr (i32.add (%get-blockset-fragment-counts-base (%get $blockset))
                               (global.get $value-size)))

   (%set! $free-list (i32.add (%get-blockset-free-lists-base (%get $blockset))
                              (global.get $value-size)))

   (%set! $half-average (i32.shr_u (%get $average) (i32.const 1)))

   (%set! $size (i32.const 1))

   (loop $again

     (call $defragment-free-list
           (%get $blockset)
           (%get $free-list)
           (i32.add (i32.load (%get $count-addr)) (%get $half-average))
           (%get $average))

     (if (i32.lt_u (%get $size) (global.get $fragment-size))
         (then
          (%incr-n i32 $free-list #value-size)
          (%incr-n i32 $count-addr #value-size)
          (%incr i32 $size)
          (br $again)))))


 (func $defragment-free-list (debug (export "defragment-free-list"))

   ;; Pops floor(count/average) free blocks from the given free list.  Unused
   ;; blocks are deallocated without being part of the count.  Each block will
   ;; be merged with any immediately following free blocks, and if the after that
   ;; the block is still a fragment, then it will be moved upward in memory
   ;; any for each coalescing it with any free neighbors, e

   (param $blockset i32)
   (param $free-list i32)
   (param $count i32)
   (param $average i32)

   (local $block i32)
   (local $next i32)
   (local $relocated i32)

   (%set! $relocated (%null))

   (loop $relocate
     (if (i32.ge_u (%get $count) (%get $average))
         (then
          (%set! $block (call $pop-free-block (%get $blockset) (%get $free-list)))
          (if (i32.ne (%get $block) (%null))
              (then

               ;; Join the free block with any adjacent free blocks above it

               (call $coalesce-free-blocks (%get $blockset) (%get $block))

               ;; Coalesce may have made the free block larger; only relocate blocks
               ;; if it's still a fragment.

               (if (%is-fragment (%get $block))
                   (then
                    (call $relocate-free-block (%get $blockset) (%get $block))))

               ;; The block has likely increased in size or moved upwards in memory,
               ;; but it is possible that it has come up against a block that cannot
               ;; be moved.  To handle this, free blocks are held in a list until
               ;; required number have been relocated, and only then are they added
               ;; back into the free lists.

               (%set! $relocated (call $make-pair (%get $block) (%get $relocated)))

               (%set! $count (i32.sub (%get $count) (%get $average)))
               (br $relocate))))))


   (loop $add-free
     (if (i32.ne (%get $relocated) (%null))
         (then

          ;; Add it back to the free block here, when its final size is known,
          ;; otherwise a large block might get stranded in a free list for much
          ;; smaller blocks.

          (call $add-free-block (%get $blockset) (call $get-pair-car (%get $relocated)))

          (%set! $next (call $get-pair-cdr (%get $relocated)))
          (call $dealloc-pair (%get $relocated))

          (%set! $relocated (%get $next))
          (br $add-free)))))

 (func $relocate-free-block (debug (export "relocate-free-block"))
   (param $blockset i32)
   (param $free-block i32)

   (local $relo-end i32)
   (local $relo-last i32)
   (local $relo-start i32)

   (%set! $relo-start (%get-next-block (%get $free-block)))

   (if (i32.eq (%get $relo-start) (%null))
       (then
        (return)))

   ;; Scan from free block upward for allocated blocks, stopping when
   ;; we've found the limit that we can move or the next free block.
   (%set! $relo-last
          (call $scan-relocatable-blocks
                (%get $relo-start)
                (%get-blockset-relocation-size-limit (%get $blockset))))

   (%set! $relo-end (%get-next-block (%get $relo-last)))

   (if (i32.or (i32.eq (%get $relo-start) (%get $relo-last))
               (i32.eq (%get $relo-end) (%null)))
       (then
        ;; The block after $free-block is too big to move, or $free-block is the
        ;; last free block in the block list, and there's not much point in
        ;; relocating it.
        (return)))

   ;; Shift the blocks down in memory, adjusting their addresses.
   (call $relocate-blocks
         (%get $blockset)
         (%get-block-addr (%get $free-block))
         (%get $relo-start)
         (%get $relo-end))

   ;; Move free block up in memory
   (%set-block-addr (%get $free-block) (%get-next-block-addr (%get $relo-last)))

   ;; Remove free-block from before relo-start.
   (call $link-refs
         (%get $blockset)
         (%get-previous-block (%get $free-block))
         (%get $relo-start))

   ;; Insert it after the relocated blocks.
   (call $link-refs (%get $blockset) (%get $relo-last) (%get $free-block))
   (call $link-refs (%get $blockset) (%get $free-block) (%get $relo-end))

   ;; In case the free block is now adjacent to another free block, merge them.
   (call $coalesce-free-blocks (%get $blockset) (%get $free-block)))

 (func $coalesce-free-blocks (debug (export "coalesce-free-blocks"))

   ;; Merges any free blocks immediately after $block into $block.

   (param $blockset i32)
   (param $block i32)

   (local $next i32)
   (local $next-size i32)

   (loop $again
     (%set! $next (%get-next-block (%get $block)))
     (if (i32.ne (%get $next) (%null))
         (then
          (if (%is-free-block (%get $next))
              (then

               ;; Check that the combined block is not too big to be
               ;; represented (size < 2^30).

               (if (call $can-merge-blocks (%get $block) (%get $next))
                   (then
                    (%set! $next-size (%get-block-size (%get $next)))

                    (call $incr-block-size (%get $block) (%get $next-size))

                    (if (i32.lt_u (%get $next-size) (global.get $fragment-size))
                        (then
                         (call $decr-blockset-fragment-count
                               (%get $blockset)
                               (%get $next-size))))

                    (call $link-refs
                          (%get $blockset)
                          (%get $block)
                          (%get-next-block (%get $next)))

                    ;; The next block has been absorbed into $block.  Marking it
                    ;; unused lets $pop-free-block know to discard the block when
                    ;; it encounters it.

                    (call $mark-block-unused (%get $next))

                    (call $incr-blockset-unused-count (%get $blockset))

                    (debug
                     (call $decr-blockset-block-count (%get $blockset))
                     (call $decr-blockset-free-count (%get $blockset)))

                    (br $again)))))))))

 (func $incr-block-size (debug (export "incr-block-size"))

   ;; Increases the size of $block by $size, preserving the flags stored with
   ;; the block size, and checking for size overflow.

   (param $block i32)
   (param $size i32)

   (local $addr i32)
   (local $new-size i32)
   (local $size-flags i32)

   (%set! $addr (%get-block-size-addr (%get $block)))
   (%set! $size-flags (i32.load (%get $addr)))

   (%set! $new-size (i32.add (i32.and (%get $size-flags)
                                      (global.get $block-size-mask))
                             (%get $size)))

   (if (i32.gt_u (%get $new-size) (global.get $block-size-mask))
       (then
        (unreachable)))

   (i32.store (%get $addr)
              (i32.or (i32.and (%get $size-flags)
                               (global.get $block-flags-mask))
                      (%get $new-size))))

 (func $can-merge-blocks (debug (export "can-merge-blocks"))

   ;; Returns false if the sum of the sizes of the blocks would be too large to
   ;; represent, ie. one whose size would trample the flag bits.  This is used

   (param $block i32)
   (param $next i32)
   (result i32)
   (i32.le_u (i32.add (%get-block-size (%get $block))
                      (%get-block-size (%get $next)))
             (global.get $block-size-mask)))

 (func $scan-relocatable-blocks (debug (export "scan-relocatable-blocks"))

   ;; Scans upward in memory from $start-block stopping when it finds a free
   ;; block, or when it has found one or more allocated blocks less than
   ;; $size-limit, or if free block is followed by a single block
   ;; larger than $size-limit, but less than $single-block-size-limit.

   (param $start-block i32)
   (param $size-limit i32)
   (result i32)

   (local $block i32)
   (local $last-block i32)
   (local $size i32)
   (local $size-remaining i32)

   (%set! $last-block (%get $start-block))
   (%set! $block (%get $start-block))
   (%set! $size-remaining (%get $size-limit))

   ;; The logic is simpler to start with the total number of bytes that can be
   ;; moved and subtract from it the size of each block that will be moved.

   (loop $again
     (if (%is-allocated-block (%get $block))
         (then
          (%set! $size (%get-block-size (%get $block)))
          (if (i32.le_s (%get $size) (%get $size-remaining))
              (then
               ;; The current block will fit with the remaining bytes available.
               (%set! $size-remaining (i32.sub (%get $size-remaining)
                                               (%get $size)))
               (%set! $last-block (%get $block))
               (%set! $block (%get-next-block (%get $block)))
               (if (i32.ne (%get $block) (%null))
                   (then
                    (br $again))))))))

   (%get $last-block))

 (func $relocate-blocks (debug (export "relocate-blocks"))

   ;; Copies the data and updates the address fields of the blocks from
   ;; $start-block to $end-block.  $start-block is moved to $dest-addr, and the
   ;; rest of the addresses follow from there.

   (param $blockset i32)
   (param $dest-addr i32)
   (param $start-block i32)
   (param $end-block i32)

   (local $block i32)
   (local $offset i32)
   (local $source-addr i32)

   (%set! $source-addr (%get-block-addr (%get $start-block)))

   (call_indirect $memory-copy
                  (type $memory-copy-sig)
                  (%get $dest-addr)
                  (%get $source-addr)
                  (i32.sub (%get-block-addr (%get $end-block))
                           (%get-block-addr (%get $start-block)))
                  (%get-blockset-id (%get $blockset)))

   (%set! $block (%get $start-block))
   (%set! $offset (i32.sub (%get $source-addr) (%get $dest-addr)))

   (loop $again
     (if (i32.ne (%get $block) (%get $end-block))
         (then
          (%set-block-addr
           (%get $block)
           (i32.sub (%get-block-addr (%get $block))
                    (%get $offset)))
          (%set! $block (%get-next-block (%get $block)))
          (br $again)))))

 (func $step-clean-free-lists (debug (export "step-clean-free-lists"))

   ;; Finds the next non-empty free list and recreates it, omitting any unused
   ;; blocks.  The blockset sweep cursor is used to track what "next" free
   ;; list means between invocations of this function.

   (param $blockset i32)

   (local $base-free-list i32)
   (local $free-list i32)
   (local $head i32)

   (%set! $base-free-list (%get-blockset-free-lists-base (%get $blockset)))
   (%set! $free-list (%get-blockset-sweep-cursor (%get $blockset)))

   (loop $again
     (if (i32.ge_u (%get $free-list) (%get $base-free-list))
         (then
          (%set! $head (i32.load (%get $free-list)))
          (if (i32.eq (%get $head) (%null))
              (then
               (%decr-n i32 $free-list #value-size)
               (br $again))
            (else
             (call $rebuild-free-list (%get $blockset) (%get $head))
             (%decr-n i32 $free-list #value-size))))
       (else

        ;; The search reached the bottom. Reset to the top for the next run.
        (%set! $free-list (%get-blockset-last-free-list (%get $blockset))))))

   ;; Update the cursor for the next invocation.
   (%set-blockset-sweep-cursor (%get $blockset) (%get $free-list)))

 (func $rebuild-free-list (debug (export "rebuild-free-list"))

   ;; Filters a free list to omit unused blocks, deallocating block refs and
   ;; pairs as needed.  This also adjusts the blockset's unused block count.

   (param $blockset i32)
   (param $head i32)

   (local $block i32)
   (local $next i32)
   (local $unused i32)
   (local $unused-count i32)

   (%set! $next (call $get-pair-cdr (%get $head)))
   (%set! $unused-count (i32.const 0))

   (loop $again
     (if (i32.ne (%get $next) (%null))
         (then
          (%set! $block (call $get-pair-car (%get $next)))

          (if (%is-unused-block (%get $block))
              (then
               ;; Unlink from the list and deallocate the block ref and the pair

               (%set! $unused (%get $next))
               (%set! $next (call $get-pair-cdr (%get $next)))
               (call $set-pair-cdr (%get $head) (%get $next))

               (call $dealloc-ref (%get $block))
               (call $dealloc-pair (%get $unused))
               (%incr i32 $unused-count))
            (else
             (%set! $head (%get $next))
             (%set! $next (call $get-pair-cdr (%get $head)))))

          (br $again))))

   ;; It's much faster to accumulate the number of unused blocks that were
   ;; deallocated and subtract them at the end than to do so incrementally.

   (%set-blockset-unused-count (%get $blockset)
                               (i32.sub (%get-blockset-unused-count (%get $blockset))
                                        (%get $unused-count))))

