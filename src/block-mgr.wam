 (func $init-blockset (export "init-blockset")
   (param $blockset i32)
   (param $relocation-size-limit i32)

   (local $blockset-id i32)
   (local $fragment-counts-base i32)
   (local $fragment-counts-size i32)
   (local $fragment-counts-top i32)
   (local $free-lists-base i32)
   (local $free-lists-size i32)
   (local $free-lists-top i32)

   (%set! $blockset-id (%get-blockset-id (%get $blockset)))

   (%set-blockset-relocation-size-limit (%get $blockset) (%get $relocation-size-limit))

   (%set-blockset-block-list     (%get $blockset) (%null))
   (%set-blockset-end-block      (%get $blockset) (%null))
   (%set-blockset-fragment-count (%get $blockset) (i32.const 0))
   (%set-blockset-total-size     (%get $blockset) (i32.const 0))
   (%set-blockset-unused-count   (%get $blockset) (i32.const 0))

   (debug
    (%set-blockset-block-count    (%get $blockset) (i32.const 0))
    (%set-blockset-free-count     (%get $blockset) (i32.const 0))
    (%set-blockset-free-space     (%get $blockset) (i32.const 0)))

   (%set! $fragment-counts-size (%calc-blockset-fragment-counts-area-size))

   (%set! $fragment-counts-base
          (i32.add (%calc-fragment-counts-area-base)
                   (i32.mul (%get $blockset-id)
                            (%get $fragment-counts-size))))

   (%set! $fragment-counts-top
          (i32.add (%get $fragment-counts-base)
                   (%get $fragment-counts-size)))

   (%set-blockset-fragment-counts-base (%get $blockset) (%get $fragment-counts-base))
   (%set-blockset-fragment-counts-top (%get $blockset) (%get $fragment-counts-top))

   (memory.fill (%get $fragment-counts-base) (i32.const 0) (%get $fragment-counts-size))

   (%set! $free-lists-size (%calc-blockset-free-lists-area-size))

   (%set! $free-lists-base
          (i32.add (%calc-free-lists-area-base)
                   (i32.mul (%get $blockset-id)
                            (%get $free-lists-size))))

   (%set! $free-lists-top
          (i32.add (%get $free-lists-base)
                   (%get $free-lists-size)))

   (%set-blockset-free-lists-base (%get $blockset) (%get $free-lists-base))
   (%set-blockset-free-lists-top (%get $blockset) (%get $free-lists-top))
   (%set-blockset-last-free-list (%get $blockset) (%get $free-lists-base))
   (%set-blockset-sweep-cursor (%get $blockset) (%get $free-lists-base))

   (memory.fill (%get $free-lists-base) (%null) (%get $free-lists-size)))

 ;;-----------------------------------------------------------------------------
 ;;
 ;; Block Refs
 ;;
 ;; This is essentially just a copy of the functionality in the pairs module.
 ;; It could probably be abstracted into a macro or set of macros, though
 ;; that might just make it more difficult to understand.

 (func $make-ref (export "make-ref")
   (param $addr i32)
   (param $size i32)
   (result i32)

   (local $ref-addr i32)

   (if (i32.eq (global.get $ref-free-list) (%null))
       (then
        (call $provision-block-refs (global.get $provision-block-ref-count))))

   (debug
    (%global.incr i32 $ref-count))

   (%set! $ref-addr (global.get $ref-free-list))
   (global.set $ref-free-list (i32.load (global.get $ref-free-list)))

   (%set-block-addr (%get $ref-addr) (%get $addr))
   (%set-block-size (%get $ref-addr) (%get $size))

   (%get $ref-addr))

 (func $provision-block-refs (debug (export "provision-block-refs"))
   (param $count i32)

   (local $bytes-required i32)
   (local $new-top i32)
   (local $pages-required i32)

   (%set! $new-top (i32.add (global.get $refs-top)
                            (i32.shl (%get $count)
                                     (global.get $ref-size-bits))))

   (%set! $bytes-required (i32.sub (%get $new-top)
                                   (i32.shl (memory.size)
                                            (global.get $page-size-bits))))

   (if (i32.gt_s (%get $bytes-required) (i32.const 0))
       (then
        (%set! $pages-required (i32.add (i32.shr_u (i32.sub (%get $bytes-required)
                                                            (i32.const 1))
                                                   (global.get $page-size-bits))
                                        (i32.const 1)))

        (drop (memory.grow (%get $pages-required)))))

   (call $fill-ref-free-list (%get $count)))

 (func $fill-ref-free-list (debug (export "fill-ref-free-list"))
   (param $count i32)

   (local $next-ref i32)
   (local $ref i32)
   (local $top i32)

   (%set! $ref (global.get $refs-top))

   (%set! $top (i32.add (i32.shl (%get $count)
                                 (global.get $ref-size-bits))
                        (global.get $refs-top)))

   (loop $again
     (%set! $next-ref (i32.add (%get $ref) (global.get $ref-size)))
     (if (i32.lt_u (%get $next-ref) (%get $top))
         (then
          (%set-block-addr (%get $ref) (%get $next-ref))
          (debug
           ;; Mark freshly-initialized refs with a distinctive bit pattern
           (%set-block-size (%get $ref) (i32.const 0x0badce11)))
          (%set! $ref (%get $next-ref))
          (br $again))
       (else
        (i32.store (%get $ref) (global.get $ref-free-list)))))

   (global.set $ref-free-list (global.get $refs-top))
   (global.set $refs-top (%get $top)))

 ;;-----------------------------------------------------------------------------
 ;;
 ;; Ref Deallocation
 ;;

 (func $dealloc-ref (export "dealloc-ref")
   (param $ref i32)

   (%set-block-addr (%get $ref) (global.get $ref-free-list))

   (debug
    ;; Mark deallocated refs with a distinctive bit pattern
    (%set-block-size (%get $ref) (i32.const 0x0badce11))
    (%global.decr i32 $ref-count))

   (global.set $ref-free-list (%get $ref)))

